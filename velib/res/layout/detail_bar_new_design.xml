<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   		android:id="@+id/detail_layout"
   		android:layout_gravity="bottom"
	    android:layout_width="fill_parent"
	    android:layout_height="@dimen/detail_height"
	    android:background="@drawable/bar_drawable" >

    	<ImageView 
    	    android:id="@+id/favorite"
    	    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/ic_fav"
	        android:paddingTop="6dp"
	        android:layout_marginLeft="10dp"
	        android:layout_centerVertical="true"/>
    
    	<TextView
	        android:id="@+id/distance"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="6dp"
	        android:layout_marginLeft="46dp"
	        android:textSize="14sp"
	        android:textStyle="italic"
	        android:textColor="@color/logo_blue"
	        android:text="340m" />
    
	    <ImageView
	        android:id="@+id/bike"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:paddingTop="4dp"
	        android:adjustViewBounds="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        android:src="@drawable/ic_bike" />
	
	    <TextView
	        android:id="@+id/bike_number"
	        android:layout_width="40dp"
	        android:layout_height="wrap_content"
	        android:textSize="30sp"
	        android:layout_marginTop="2dp"
	        android:text="34"
	        android:gravity="center"
	        android:layout_alignParentTop="true"
	        android:layout_toLeftOf="@id/bike" />
	
	    <ImageView
	        android:id="@+id/parking"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:adjustViewBounds="true"
	        android:paddingBottom="6dp"
	        android:paddingTop="4dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginBottom="6dp"
	        android:layout_below="@id/bike"
	        android:layout_alignParentRight="true"
	        android:src="@drawable/ic_parking" />
	    
	    <TextView
	        android:id="@+id/parking_number"
	        android:layout_width="40dp"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/parking"
	        android:layout_alignParentBottom="true"
	        android:text="9"
	        android:gravity="center"
	        android:layout_marginBottom="4dp"
	        android:textSize="30sp" />
 	    
	   	<TextView
	        android:id="@+id/station_info"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="46dp"
	        android:layout_marginRight="82dp"
			android:text="Place du bataillon FranÃ§ais de l'ONU"
			android:paddingTop="6dp"
	        android:gravity="left"
	        android:textColor="#4a4a4a"
	        android:textSize="20sp"
	        android:maxLines="2"
	        android:textStyle="italic"
   	    	android:typeface="sans"  />

	</RelativeLayout>
  		