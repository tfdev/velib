<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center_vertical"
	    android:orientation="vertical"
	    android:background="@color/logo_blue_light" >

		<TextView
		    android:id="@+id/aboutText"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        android:layout_marginTop="8dp"
	        android:layout_marginBottom="8dp"
	        android:textColor="@android:color/white"
		    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam sed elit erat. Vivamus aliquet, enim eleifend varius luctus, justo libero congue elit, ac ultrices dolor justo eu massa. Nullam lobortis, dui venenatis eleifend tincidunt, ipsum enim consectetur augue, convallis sagittis urna nibh ac justo. Fusce vel eros at ipsum volutpat laoreet. Etiam ultricies orci sit amet neque imperdiet lacinia. Donec non rutrum magna, ut tempor tortor. Curabitur eu aliquet nunc, id iaculis ligula. " />
	    
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
	        
	        <Button
	            android:id="@+id/rate"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:ellipsize="end"
	            android:layout_marginLeft="15dp"
	            android:layout_marginRight="15dp"
	            android:layout_marginTop="8dp"
	            android:layout_marginBottom="8dp"
	            android:text="@string/rate_app"
	            android:textColor="@color/logo_blue"
	            android:textStyle="bold"
	            android:background="@drawable/corner_button" 
	            android:paddingLeft="10dp"
	            android:drawableLeft="@drawable/ic_action_good" />
	        
	    </LinearLayout>
	    
	    <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
	
	        <Button
	            android:id="@+id/mail"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:ellipsize="end"
	            android:layout_marginLeft="15dp"
	            android:layout_marginRight="15dp"
	            android:layout_marginTop="8dp"
	            android:layout_marginBottom="8dp"
	            android:text="@string/mail_me"
	            android:textColor="@color/logo_blue"
	            android:textStyle="bold"
	            android:background="@drawable/corner_button"
	            android:paddingLeft="10dp"
	            android:drawableLeft="@drawable/ic_action_email" />
	
	    </LinearLayout>
	   	<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
	        
	        <Button
	            android:id="@+id/share"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:ellipsize="end"
	            android:layout_marginLeft="15dp"
	            android:layout_marginRight="15dp"
	            android:layout_marginTop="8dp"
	            android:layout_marginBottom="8dp"
	            android:text="@string/share_it"
	            android:textColor="@color/logo_blue"
	            android:textStyle="bold"
	            android:background="@drawable/corner_button"
	            android:paddingLeft="10dp"
	            android:drawableLeft="@drawable/ic_action_share" />
	
	    </LinearLayout>
	
	</LinearLayout>
    
</ScrollView>
