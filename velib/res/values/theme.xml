<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- the theme applied to the application or activity -->
    
    <style name="CustomActionBarTheme"
           parent="@style/Theme.AppCompat.Light.DarkActionBar">
        
        <item name="android:actionBarStyle">@style/MyActionBar</item>
          
        <!-- Support library compatibility -->   
        <item name="actionBarStyle">@style/MyActionBar</item>
    	
         <!-- colorPrimary is used for the default action bar background -->
    	<item name="colorPrimary">@color/logo_blue_light</item>

	    <!-- colorPrimaryDark is used for the status bar -->
	    <item name="colorPrimaryDark">@color/logo_blue</item>
	
	    <!-- colorAccent is used as the default value for colorControlActivated,
	         which is used to tint widgets -->
	    <item name="colorAccent">@color/logo_blue_light</item>
	
	    <!-- You can also set colorControlNormal, colorControlActivated
	         colorControlHighlight, and colorSwitchThumbNormal. -->
        
    </style>

    
    <!-- ActionBar styles -->
    
    <style name="MyActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar">
        
        <item name="android:background">@drawable/actionbar_drawable</item>
        <item name="android:titleTextStyle">@style/MyTextAppearance</item>


        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_drawable</item>
        <item name="titleTextStyle">@style/MyTextAppearance</item>

    
    </style>
    
    <!-- Text Appearance styles -->
    
    <style name="MyTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
    	
    	<item name="android:textColor">#ffffff</item>
	
	</style>
    
</resources>